<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Desciption</th>
            <th>Tags</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>{{product.title}}</td>
                <td>{{product.bodyHtml}}</td>
                <td>{{product.tags}}</td>
                <td>{{product.image}}</td>                                
            </tr>
        {% endfor %}
    </tbody>
</table>
