{% extends 'admin/adminBase.jinja2' %}

{% block body %}
    <div class="container">
        <br>
        <ol class="breadcrumb">
            <li><a href="/admin/shopify-users/">Shopify Users</a></li>
            <li><a href="{{shopifyUser.getAdminUrl()}}">{{shopifyUser.myshopifyDomain}}</a></li>
            <li class="active">Product Search</li>
        </ol>
        <div class="row">
            <div class="col-md-6">
                <form>
                    <input name="q" type="text" class="form-control" value="{{query}}" autofocus>
                    <button>Submit</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Desciption</th>
                            <th>Tags</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{product.title}}</td>
                                <td>{{product.bodyHtml}}</td>
                                <td>{{product.tags}}</td>
                                <td>{{product.image}}</td>                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}